                {% for teams in teamPlayersListByTeam[numberoOfTeam] %}

                    {{ dump(teams.role == 0 ) }}
                    {% if teams.role == 0 %}
                    
                        <div class="player_card">
                        <div class="card" style="width: 10rem;">
                            <img src="assets/img/pexels-tima-miroshnichenko-6078303.jpg" class="card-img-top" alt="...">
                            <div class="card-body">
                            <p class="card-text text-center"><a href="#">{{ teams.user.firstname }}</a></p>
                            </div>
                        </div>
                        </div>

                    {% endif %}

                {% endfor %}

        </div>

    {% endif %}

   {% set numberoOfTeam = numberoOfTeam + 1 %}  
