{% set numberoOfTeam = 0 %}
  {% for  team in myTeams %}

    {% if team.role == 1  %}

        <div class="container_team">

            {% if teamPlayersListByTeam[numberoOfTeam] | length > 1 %}
                 <button type="button" class="btn btn-success d-flex">Testez cette équipe</button>
                {% else %}
                     <button type="button" class="btn btn-success d-flex">Ajouter des joueurs avant de pouvoir faire un test</button>
                {% endif %}



